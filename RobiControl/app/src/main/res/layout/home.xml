<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Welcome_Text"
        android:layout_width="0dp"
        android:layout_height="30pt"
        android:layout_marginLeft="14pt"
        android:layout_marginTop="28pt"
        android:layout_marginRight="14pt"
        android:layout_marginBottom="10pt"
        android:background="@color/colorSecondaryDark"
        android:paddingTop="8pt"
        android:singleLine="false"
        android:text="@string/Unconnected"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/ConnectionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ConnectionText"
        android:layout_width="0dp"
        android:layout_height="60pt"
        android:layout_marginLeft="14pt"
        android:layout_marginTop="14pt"
        android:layout_marginRight="14pt"
        android:layout_marginBottom="10pt"
        android:background="@color/colorSecondaryDark"
        android:paddingStart="8pt"
        android:paddingTop="9pt"
        android:paddingEnd="8pt"
        android:singleLine="false"
        android:text="@string/ConnError"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/Connection_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Welcome_Text"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Connection_Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14pt"
        android:layout_marginTop="50pt"
        android:layout_marginEnd="14pt"
        android:layout_marginBottom="80pt"
        android:background="@drawable/button_radius"
        android:text="@string/Connect"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/Menu_Navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ConnectionText" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Menu_Navigation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_gravity="bottom"
        android:background="@color/colorSecondaryDark"
        app:itemTextColor="@color/bottom_navigation_color"
        app:itemIconTint="@color/bottom_navigation_color"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


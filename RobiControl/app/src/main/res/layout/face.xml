<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/happy_face"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="96dp"
        android:background="@color/colorAccent"
        android:foreground="@mipmap/happy_smiley_foreground"
        app:layout_constraintBottom_toTopOf="@id/sad_face"
        app:layout_constraintEnd_toStartOf="@id/neutral_face"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/neutral_face"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="96dp"
        android:background="@color/colorAccent"
        android:foreground="@mipmap/happy_smiley_foreground"
        app:layout_constraintBottom_toTopOf="@id/angry_face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/happy_face"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sad_face"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="135dp"
        android:background="@color/colorAccent"
        android:foreground="@mipmap/happy_smiley_foreground"
        app:layout_constraintBottom_toTopOf="@id/Menu_Navigation"
        app:layout_constraintEnd_toStartOf="@id/angry_face"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/happy_face" />

    <TextView
        android:id="@+id/angry_face"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="135dp"
        android:background="@color/colorAccent"
        android:foreground="@mipmap/happy_smiley_foreground"
        app:layout_constraintBottom_toTopOf="@id/Menu_Navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sad_face"
        app:layout_constraintTop_toBottomOf="@id/neutral_face" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Menu_Navigation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_gravity="bottom"
        android:background="@color/colorSecondaryDark"
        app:itemTextColor="@color/bottom_navigation_color"
        app:itemIconTint="@color/bottom_navigation_color"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>